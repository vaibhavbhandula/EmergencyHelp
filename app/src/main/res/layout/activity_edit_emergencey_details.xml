<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/pad_20"
        android:layout_marginRight="@dimen/pad_20"
        android:layout_marginTop="@dimen/pad_20"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/emergency_contact" />

        <EditText
            android:id="@+id/Emergency_contacts_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad_20"
            android:hint="@string/hint_ct1"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/emergency_number" />

        <EditText
            android:id="@+id/Emergency_contacts_number1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad_10"
            android:hint="@string/enter_em_number"
            android:inputType="phone"
            android:textColor="@android:color/black"
            android:textSize="@dimen/size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/emergency_contact" />


        <EditText
            android:id="@+id/Emergency_contacts_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad_20"
            android:hint="@string/hint_ct2"
            android:singleLine="true"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/emergency_number" />

        <EditText
            android:id="@+id/Emergency_contacts_number2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_em_number"
            android:inputType="phone"
            android:textColor="@android:color/black"
            android:textSize="@dimen/size" />


        <com.andexert.library.RippleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/pad_20"
            android:gravity="center">

            <info.hoang8f.widget.FButton
                android:id="@+id/update"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/fbutton_default_padding_top"
                android:text="Update"
                fbutton:buttonColor="@color/colorAccent"
                fbutton:cornerRadius="@dimen/pad_4"
                fbutton:shadowColor="@color/fbutton_color_asbestos"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="@dimen/pad_4" />

        </com.andexert.library.RippleView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_10"
            android:text="@string/note"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>
</LinearLayout>